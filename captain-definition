{
	"schemaVersion": 2,
	"dockerfileLines": [
		"FROM oven/bun AS build",
		"RUN mkdir -p /usr/src/app",
		"WORKDIR /usr/src/app",
		"COPY package.json package.json",
		"COPY bun.lock bun.lock",
		"RUN bun install --frozen-lockfile --production",
		"COPY ./src ./src",
		"ENV NODE_ENV=production",
		"RUN bun build --minify --target bun --outfile ./dist/index.js ./src/index.ts",
		"RUN mkdir -p uploads",
		"EXPOSE 3000",
		"CMD [\"./dist/index.js\"]"
	]
}
