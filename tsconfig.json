{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es2022"],
		"module": "NodeNext",
		"moduleDetection": "force",
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022",
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
